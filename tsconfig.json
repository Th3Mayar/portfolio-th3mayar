{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "baseUrl": ".",
    "paths": { 
      "@/*": ["src/*"],
      "types/*": ["types/*"],
      "components/*": ["src/components/*"],
      "layouts/*": ["src/layouts/*"],
      "pages/*": ["src/pages/*"],
      "i18n/*": ["src/i18n/*"],
      "lang/*": ["src/lang/*"],
      "styles/*": ["src/styles/*"],
     },
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": false,
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "public"]
}
