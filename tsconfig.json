{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": false,
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "public"]
}
