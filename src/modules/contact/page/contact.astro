---
import Layout from "@/layouts/Layout.astro";
import Button from "@/components/atoms/Button.vue";
import IconByName from "@/components/atoms/IconByName.vue";
---

<Layout title="Contact information">
  <main
    class="flex flex-col md:flex-row h-full min-h-[70vh] w-full bg-dark-background"
  >
    <section class="flex-1 p-4 flex flex-col gap-6 items-center justify-center">
      <h2 class="font-mono text-lg text-default mb-2">~/contact-me</h2>
      <form
        class="w-full max-w-md bg-card/80 rounded-md p-6 border-2 border-dark/90 flex flex-col gap-4 shadow-2xl"
      >
        <label class="flex flex-col gap-1">
          <span class="font-mono text-xs text-light">Name</span>
          <input
            type="text"
            name="name"
            required
            class="bg-dark/30 text-light rounded px-3 py-2 outline-none focus:ring-2 focus:ring-dark rounded-lg"
            placeholder="Your Name" />
        </label>
        <label class="flex flex-col gap-1">
          <span class="font-mono text-xs text-light">Email</span>
          <input
            type="email"
            name="email"
            required
            class="bg-dark/30 text-light rounded px-3 py-2 outline-none focus:ring-2 focus:ring-dark rounded-lg"
            placeholder="Your Email"
          />
        </label>
        <label class="flex flex-col gap-1">
          <span class="font-mono text-xs text-light">Message</span>
          <textarea
            name="message"
            rows="4"
            required
            class="bg-dark/30 text-light rounded px-3 py-2 outline-none focus:ring-2 focus:ring-dark rounded-lg"
            placeholder="Your Message"
          ></textarea>
        </label>
        <Button type="submit" variant="dark" class="self-end mt-2 w-full" @click={(e: { preventDefault: () => any; }) => e.preventDefault()}>
          <span class="flex items-center gap-2">
            <IconByName name="Send" class="w-4 h-4" />
            Send
          </span>
        </Button>
      </form>
      <div class="text-light text-xs mt-4 font-mono">
        Or email me at <a
          href="mailto:josehenriquez@gmail.com"
          class="text-pink underline">josehenriquez.02.26@gmail.com</a>
      </div>
    </section>
  </main>
</Layout>

