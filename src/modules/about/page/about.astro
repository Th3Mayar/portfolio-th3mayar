---
import Layout from "@/layouts/Layout.astro";
import AboutPanel from "@/components/molecule/AboutPanel.vue";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

let lang = getLangFromUrl(Astro.url);

const { about: TAbout } = useTranslations(lang);
const { seo } = TAbout;

Astro.cookies.set("lang", lang, {
  path: "/",
  maxAge: 60 * 60 * 24 * 30,
  sameSite: "strict",
  secure: true,
});
---

<Layout title={ seo.title }>
  <AboutPanel
    client:only="vue"
    class:list="h-[75dvh]"
    lang={ lang }
  />
</Layout>

<!-- Responsive css to height -->

<style is:global>
  @media (max-height: 700px) {
    .h-\[75dvh\] {
      height: 60dvh;
    }
  }

  .border-border {
    border-color: var(--border) !important;
  }
</style>
