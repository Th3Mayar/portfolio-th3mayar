---
import Layout from "@/layouts/Layout.astro";
import ProjectsPanel from "@/components/molecule/ProjectsPanel.vue";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

let lang = getLangFromUrl(Astro.url);

const { projects: TProjects } = useTranslations(lang);
const { seo } = TProjects;

Astro.cookies.set("lang", lang, {
  path: "/",
  maxAge: 60 * 60 * 24 * 30,
  sameSite: "strict",
  secure: true,
});
---

<Layout title={ seo.title }>
  <ProjectsPanel client:only="vue" lang={lang} />
</Layout>

<style is:global>
    .border-border {
        border-color: var(--border) !important;
    }
</style>