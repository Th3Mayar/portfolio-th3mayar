---
import Layout from "@/layouts/Layout.astro";
import Item from "@/components/molecule/Item.vue";
import IconByName from "@/components/atoms/IconByName.vue";
import Button from "@/components/atoms/Button.vue";
import Typography from "../atoms/Typography.vue";
---

<Layout title="Portfolio | Components">
  <main>
    <!-- flecha con span -->
    <span></span>
    <Typography variant="FiraCode" as="h5" color="light" caseType="upper">
      Components <span>&rarr;</span>
    </Typography>
    <div>
      <Typography variant="FiraCode" as="h5" color="light" caseType="upper">
        Typography
      </Typography>
      <section>
        <Typography variant="FiraCode" as="h5" color="green" caseType="lower">
          Variant green
        </Typography>
        <Typography variant="FiraCode" as="h5" color="dark" caseType="lower">
          Variant dark
        </Typography>
        <Typography variant="FiraCode" as="h5" color="purple" caseType="lower">
          Variant purple
        </Typography>
        <Typography variant="FiraCode" as="h5" color="pink" caseType="lower">
          Variant pink
        </Typography>
        <Typography
          variant="FiraCode"
          as="h5"
          color="limongrass"
          caseType="lower"
        >
          Variant limongrass
        </Typography>
        <Typography variant="FiraCode" as="h5" color="orange" caseType="lower">
          Variant orange
        </Typography>
      </section>
    </div>
    <div>
      <Typography variant="FiraCode" as="h5" color="light" caseType="upper">
        Icons
      </Typography>
      <section>
        <IconByName name="Airplay" color="green" className="" />
        <IconByName name="Folder" color="green" className="" />
        <IconByName name="Mail" color="green" className="" />
        <IconByName name="User" color="green" className="" />
        <IconByName name="Phone" color="green" className="" />
        <IconByName name="Star" color="green" className="" />
        <IconByName name="Box" color="green" className="" />
      </section>
    </div>
    <div>
      <Typography variant="FiraCode" as="h5" color="light" caseType="upper">
        Items
      </Typography>
      <Item title="hello" />
      <Item title="about-me" />
      <Item title="projects" />
      <Item title="jose-francisco" />
      <Item title="personal-info" />
      <Item title="contacts" />
    </div>
    <div>
      <Typography variant="FiraCode" as="h5" color="light" caseType="upper">
        Buttons
      </Typography>
      <Button variant="orange" size="medium" disabled={false}
        >Orange Button</Button
      >
      <Button variant="outline" size="medium" disabled={false}
        >Outline Button</Button
      >
      <Button variant="secondary" size="medium" disabled={false}
        >Outline Button</Button
      >
      <Button variant="ghost" size="medium" disabled={false}
        >Ghost Button</Button
      >
      <Button variant="link" size="medium" disabled={false}
        >Link Button</Button
      >
      <Button variant="button" size="medium" disabled={false}
      >Button</Button
    >
    </div>
  </main>
</Layout>

<style>
  main {
    display: flex;
    padding: 20px;
    justify-content: center;
    align-items: center;
    border: 2px solid #fff;
    border-radius: 20px;
    padding: 50px;
  }
  section {
    flex-direction: column;
    display: flex;
    gap: 20px;
  }
  div {
    display: flex;
    flex-direction: column;
    padding: 50px;
    gap: 20px;
  }
</style>
